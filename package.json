{
  "name": "vscode-extension-guigit",
  "displayName": "GUI Git History",
  "description": "A visual Git history viewer with advanced commit operations",
  "version": "0.0.19",
  "publisher": "Mickls",
  "icon": "gui-git-history-high-resolution-logo-transparent.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mickls/vscode-extension-guigit.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "SCM Providers"
  ],
  "activationEvents": [],
  "extensionDependencies": [
    "vscode.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "guigit.showHistory",
        "title": "Show Git History",
        "icon": "$(git-branch)"
      },
      {
        "command": "guigit.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "guigit.toggleBlame",
        "title": "Toggle Git Blame",
        "icon": "$(eye)"
      },
      {
        "command": "guigit.showCommitDetails",
        "title": "Show Commit Details"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "guigit",
          "title": "Git History",
          "icon": "$(git-branch)"
        }
      ]
    },
    "views": {
      "guigit": [
        {
          "type": "webview",
          "id": "guigit.historyView",
          "name": "Commit History"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "guigit.refresh",
          "when": "view == guigit.historyView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "GUI Git History",
      "properties": {
        "guigit.fileViewMode": {
          "type": "string",
          "enum": [
            "list",
            "tree"
          ],
          "default": "list",
          "description": "Default view mode for changed files (list or tree)"
        },
        "guigit.blame.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Git blame annotations in the editor"
        },
        "guigit.blame.showOnlyCurrentLine": {
          "type": "boolean",
          "default": true,
          "description": "Show blame information only for the current line"
        },
        "guigit.blame.format": {
          "type": "string",
          "default": "${author}, ${time} • ${hash} • ${message}",
          "description": "Format string for blame annotations. Available variables: ${author}, ${time}, ${hash}, ${message}"
        },
        "guigit.autoStashOnPull": {
          "type": "string",
          "enum": [
            "ask",
            "always",
            "never"
          ],
          "default": "ask",
          "description": "How to handle uncommitted changes when pulling: 'ask' (always ask), 'always' (auto-stash), 'never' (cancel operation)",
          "enumDescriptions": [
            "总是询问如何处理未提交的变更",
            "自动暂存未提交的变更并继续",
            "遇到未提交变更时取消操作"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.38",
    "simple-git": "^3.19.1"
  }
}
