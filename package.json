{
  "name": "vscode-extension-guigit",
  "displayName": "GUI Git History",
  "description": "A visual Git history viewer with advanced commit operations",
  "version": "0.0.2",
  "publisher": "guigit",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mickls/vscode-extension-guigit.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "SCM Providers"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "guigit.showHistory",
        "title": "Show Git History",
        "icon": "$(git-branch)"
      },
      {
        "command": "guigit.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "guigit.gitHistory",
          "name": "Git History",
          "when": "gitOpenRepositoryCount != 0"
        }
      ]
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "guigit",
          "title": "Git History",
          "icon": "$(git-branch)"
        }
      ]
    },
    "views": {
      "guigit": [
        {
          "type": "webview",
          "id": "guigit.historyView",
          "name": "Commit History",
          "when": "gitOpenRepositoryCount != 0"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "guigit.refresh",
          "when": "view == guigit.historyView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "GUI Git History",
      "properties": {
        "guigit.fileViewMode": {
          "type": "string",
          "enum": ["list", "tree"],
          "default": "list",
          "description": "Default view mode for changed files (list or tree)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "simple-git": "^3.19.1"
  }
}