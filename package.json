{
  "name": "vscode-extension-guigit",
  "displayName": "GUI Git History",
  "description": "A visual Git history viewer with advanced commit operations",
  "version": "0.0.37",
  "publisher": "Mickls",
  "icon": "gui-git-history-high-resolution-logo-transparent.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mickls/vscode-extension-guigit.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "SCM Providers"
  ],
  "activationEvents": [
    "onCommand:guigit.viewFileHistory"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "GUI Git History",
      "properties": {
        "guigit.proxy.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable custom proxy configuration"
        },
        "guigit.proxy.http": {
          "type": "string",
          "default": "",
          "description": "HTTP proxy URL (e.g., http://127.0.0.1:7890)"
        },
        "guigit.proxy.https": {
          "type": "string",
          "default": "",
          "description": "HTTPS proxy URL (e.g., http://127.0.0.1:7890)"
        },
        "guigit.proxy.noProxy": {
          "type": "string",
          "default": "",
          "description": "No proxy for these hosts (comma-separated)"
        },
        "guigit.autoStashOnPull": {
          "type": "string",
          "enum": ["ask", "always", "never"],
          "default": "ask",
          "description": "Automatically stash uncommitted changes when pulling",
          "enumDescriptions": [
            "Ask each time what to do with uncommitted changes",
            "Always automatically stash uncommitted changes",
            "Never stash, cancel operation if there are uncommitted changes"
          ]
        },
        "guigit.blame.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Git blame annotations in the editor"
        }
      }
    },
    "commands": [
      {
        "command": "guigit.showHistory",
        "title": "Show Git History",
        "icon": "$(git-branch)"
      },
      {
        "command": "guigit.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "guigit.toggleBlame",
        "title": "Toggle Git Blame",
        "icon": "$(eye)"
      },
      {
        "command": "guigit.viewFileHistory",
        "title": "View File History",
        "icon": "$(history)"
      },
      {
        "command": "guigit.showCommitDetails",
        "title": "Show Commit Details"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "guigit",
          "title": "Git History",
          "icon": "$(git-branch)"
        }
      ]
    },
    "views": {
      "guigit": [
        {
          "type": "webview",
          "id": "guigit.historyView",
          "name": "Commit History"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "guigit.refresh",
          "when": "view == guigit.historyView",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "guigit.viewFileHistory",
          "when": "resourceScheme == file",
          "group": "navigation@9"
        }
      ],
      "editor/context": [
        {
          "command": "guigit.viewFileHistory",
          "when": "editorTextFocus && !isInDiffEditor",
          "group": "navigation@9"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.38",
    "simple-git": "^3.19.1"
  }
}
